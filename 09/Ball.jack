class Ball {
    field int size;
    field Point topLeft;

    constructor Ball new(int Asize, int Ax, int Ay) {
        let size = Asize;
        let topLeft = Point.new(Ax, Ay);

        do render();

        return this;
    }

    method void destroy() {
        do Memory.deAlloc(this);
        return;
    }

    method void render() {
        do Screen.setColor(true);
        do Screen.drawRectangle(topLeft.x(), topLeft.y(), topLeft.x() + size, topLeft.y() + size);
        return;
    }
}
